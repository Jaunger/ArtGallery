<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="Theme.ArtGallery" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Backgrounds & Surfaces -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Button Colors -->
        <item name="colorButtonNormal">@color/colorButton</item>

        <!-- Status & Navigation Bar -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.ArtGallery.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Dark Backgrounds -->
        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="colorSurface">#1E1E1E</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">#B0BEC5</item>

        <!-- Button Colors -->
        <item name="colorButtonNormal">@color/colorButton</item>

        <!-- Status & Navigation Bar -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorBackgroundDark</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorOnPrimary</item> <!-- Ensures white text -->
    </style>
</resources>